<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_engine_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:scrollbars="vertical"
            android:fadeScrollbars="true"
            android:fadingEdge="vertical"
            android:scrollbarStyle="insideOverlay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        
        <Button
            android:id="@+id/btn_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingBtnMain"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="16dp"
            android:src="@drawable/icon_more"
            app:fabCustomSize="64dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:maxImageSize="32dp" />

        <ImageView
            android:id="@+id/floatingBtnSend"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/shape_c24_2196f3"
            android:elevation="5dp"
            android:padding="14dp"
            android:src="@drawable/icon_send"
            android:visibility="gone"
            android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="@id/floatingBtnMain"
            app:layout_constraintBottom_toTopOf="@+id/floatingBtnCar"
            app:layout_constraintEnd_toEndOf="@+id/floatingBtnMain"/>

        <ImageView
            android:id="@+id/floatingBtnConnect"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/shape_c24_2196f3"
            android:elevation="5dp"
            android:padding="16dp"
            android:src="@drawable/icon_connect"
            android:layout_marginBottom="18dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/floatingBtnMain"
            app:layout_constraintBottom_toTopOf="@+id/floatingBtnSet"
            app:layout_constraintEnd_toEndOf="@+id/floatingBtnMain"/>

        <ImageView
            android:id="@+id/floatingBtnSet"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/shape_c24_2196f3"
            android:elevation="5dp"
            android:padding="16dp"
            android:src="@drawable/icon_set"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/floatingBtnMain"
            app:layout_constraintBottom_toTopOf="@+id/floatingBtnMain"
            app:layout_constraintEnd_toEndOf="@+id/floatingBtnMain" />

        <ImageView
            android:id="@+id/floatingBtnCar"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/shape_c24_2196f3"
            android:elevation="5dp"
            android:padding="12dp"
            android:src="@drawable/icon_car"
            android:visibility="gone"
            android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="@id/floatingBtnMain"
            app:layout_constraintBottom_toTopOf="@+id/floatingBtnConnect"
            app:layout_constraintEnd_toEndOf="@+id/floatingBtnMain" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>